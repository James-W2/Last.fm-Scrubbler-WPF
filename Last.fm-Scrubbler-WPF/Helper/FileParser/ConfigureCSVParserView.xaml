<Window x:Class="Scrubbler.Helper.FileParser.ConfigureCSVParserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:beh="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Configure CSV Parser" Height="325" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded" >

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="5"/>
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="1" Grid.Column="1" Text="Artist Field Index:"/>
    <xctk:IntegerUpDown Grid.Row="1" Grid.Column="3" Value="{Binding ArtistFieldIndex}" Minimum="0"/>

    <TextBlock Grid.Row="3" Grid.Column="1" Text="Album Field Index:"/>
    <xctk:IntegerUpDown Grid.Row="3" Grid.Column="3" Value="{Binding AlbumFieldIndex}" Minimum="0"/>

    <TextBlock Grid.Row="5" Grid.Column="1" Text="Track Field Index:"/>
    <xctk:IntegerUpDown Grid.Row="5" Grid.Column="3" Value="{Binding TrackFieldIndex}" Minimum="0"/>

    <TextBlock Grid.Row="7" Grid.Column="1" Text="Timestamp Field Index:"/>
    <xctk:IntegerUpDown Grid.Row="7" Grid.Column="3" Value="{Binding TimestampFieldIndex}" Minimum="0"/>

    <TextBlock Grid.Row="9" Grid.Column="1" Text="Album Artist Field Index:"/>
    <xctk:IntegerUpDown Grid.Row="9" Grid.Column="3" Value="{Binding AlbumArtistFieldIndex}" Minimum="0"/>

    <TextBlock Grid.Row="11" Grid.Column="1" Text="Duration Field Index:"/>
    <xctk:IntegerUpDown Grid.Row="11" Grid.Column="3" Value="{Binding DurationFieldIndex}" Minimum="0"/>

    <TextBlock Grid.Row="13" Grid.Column="1" Text="Delimiters:"/>
    <TextBox Grid.Row="13" Grid.Column="3" Text="{Binding Delimiters}"/>

    <CheckBox Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="3" IsChecked="{Binding HasFieldsEnclosedInQuotes}" Content="Has Fields Enclosed In Quotes"/>

    <TextBlock Grid.Row="17" Grid.Column="1" Text="Encoding:"/>
    <ComboBox Grid.Row="17" Grid.Column="3" ItemsSource="{Binding AvailableEncodings}" SelectedItem="{Binding SelectedEncoding}" DisplayMemberPath="EncodingName"/>

    <Button Grid.Row="19" Grid.Column="0" Grid.ColumnSpan="4" Content="Load Defaults" HorizontalAlignment="Right">
      <beh:Interaction.Triggers>
        <beh:EventTrigger EventName="Click">
          <beh:CallMethodAction TargetObject="{Binding}" MethodName="LoadDefaults"/>
        </beh:EventTrigger>
      </beh:Interaction.Triggers>
    </Button>

    <StackPanel Grid.Row="21" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Save &amp; Close" HorizontalAlignment="Right" Margin="0,0,5,0">
        <beh:Interaction.Triggers>
          <beh:EventTrigger EventName="Click">
            <beh:CallMethodAction TargetObject="{Binding}" MethodName="SaveAndClose"/>
          </beh:EventTrigger>
        </beh:Interaction.Triggers>
      </Button>
      <Button Content="Cancel" HorizontalAlignment="Right">
        <beh:Interaction.Triggers>
          <beh:EventTrigger EventName="Click">
            <beh:CallMethodAction TargetObject="{Binding}" MethodName="Cancel"/>
          </beh:EventTrigger>
        </beh:Interaction.Triggers>
      </Button>
    </StackPanel>
  </Grid>
</Window>